rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /assets/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /screenshots/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /games/{gameId}/{allPaths=**} {
      allow read;
      // Allow write if user is authenticated (you may want to add owner check via Firestore)
      allow write: if request.auth != null;
    }
  }
}
